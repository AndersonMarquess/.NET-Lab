@page "/condicionais"
@using Classes.Shared.Models

<h2>Usando Condicionais</h2>
<button class="btn btn-info mb-3" @onclick="@(() => AlterarTipoDeRepeticao())">Alterar tipo de repetição</button>
<br />
<main>

    @if (MostrarForeach)
    {
        <section>
            <h3>Foreach</h3>
            @foreach (var prod in PegarProdutos())
            {
                <p>Nome: @prod.Nome</p>
                <p>Data do cadastro: @prod.PegarDataDoCadastroFormatada()</p>
                <br />
            }
        </section>
    }
    else
    {
        <section>
            <h3>For padrão</h3>
            @for (int i = 0; i < PegarProdutos().Count; i++)
            {
                <p>@(i + 1) - Nome: @PegarProdutos()[i].Nome</p>
                <p>@(i + 1) - Data do cadastro: @PegarProdutos()[i].PegarDataDoCadastroFormatada()</p>
                <br />
            }
        </section>
    }
</main>



@code {

    public bool MostrarForeach = true;

    private void AlterarTipoDeRepeticao()
    {
        MostrarForeach = !MostrarForeach;
    }

    private List<Produto> PegarProdutos()
    {
        return new List<Produto>(){
            new Produto
            {
                Nome = "Curso SQL",
                DataDoCadastro = new DateTime(2020, 04, 01)
            },
            new Produto
            {
                Nome = "Curso C#",
                DataDoCadastro = new DateTime(2020, 03, 01)
            },
            Produto.PegarProdutoMock()
        };
    }
}

<style>
    main {
        display: flex;
    }

        main section {
            flex: 1;
        }
</style>