@model DotNet_Core_5_Course_MVC.Models.Type
@{
	ViewData["Title"] = "Edit type";
}

<form method="post" asp-action="Edit">
	<div class="border p-3">

		<div class="form-group row">
			<h2 class="text-info pl-3">Edit Type</h2>
		</div>

		<input asp-for="Id" type="hidden" />

		<div class="form-group row">
			<div class="col-4">
				<label asp-for="Name"></label>
			</div>
			<div class="col-8">
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row">
			<div class="col row">
				<div class="mx-auto">
					<input type="submit" class="btn btn-primary mr-3" value="Save" />
					<a asp-action="Index" class="btn btn-info">Back</a>
				</div>
			</div>
		</div>

	</div>
</form>